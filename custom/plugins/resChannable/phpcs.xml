<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>Coding standard for PHP</description>

    <file>Components/</file>
    <file>Controllers/</file>
    <file>Models/</file>
    <file>Subscriber/</file>
    <file>resChannable.php</file>

    <!-- Overrule standard forbidden functions to prevent dumps and exits in the code -->
    <rule ref="Generic.PHP.ForbiddenFunctions">
        <properties>
            <property name="forbiddenFunctions" type="array" value="sizeof=>count,delete=>unset,print=>echo,is_null=>null,create_function=>null,dump=>null,var_dump=>null,exit=>null,die=>null"/>
        </properties>
    </rule>

    <rule ref="PSR1"/>
    <rule ref="PSR2"/>
    <rule ref="PSR12"/>
</ruleset>
